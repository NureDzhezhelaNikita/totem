#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

#define BASE 0
#define NAV  1
#define SYM  2
#define ADJ  3
#define TVP1 4
#define TVP2 5

&mt {
    flavor = "tap-preferred";
    tapping-term-ms = <300>;
};

/ {
    combos {
        compatible = "zmk,combos";

        alt_tab {
            bindings = <&kp LA(TAB)>;
            key-positions = <32 0>;
        };

        copy {
            bindings = <&kp LC(C)>;
            key-positions = <32 23>;
        };

        paste {
            bindings = <&kp LC(V)>;
            key-positions = <32 24>;
        };

        cut {
            bindings = <&kp LC(X)>;
            key-positions = <32 22>;
        };

        select_all {
            bindings = <&kp LC(A)>;
            key-positions = <32 10>;
        };

        service {
            bindings = <&to 3>;
            key-positions = <32 37 31 20>;
        };
    };

    macros {
        change_language: change_language {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(LALT)>;
            label = "CHANGE_LANGUAGE";
        };

        screenshot: screenshot {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(LG(S))>;
            label = "SCREENSHOT";
        };
    };

    behaviors {
        p_bind: p_bind {
            compatible = "zmk,behavior-tap-dance";
            label = "P_BIND";
            #binding-cells = <0>;
            bindings = <&kp P>, <&kp LBKT>, <&kp RBKT>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        // ▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄

        base_layer {
            // ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓

            label = "BASE";

            // ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
            //             ┏━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┓   ┏━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┓
            //             ┃     Q     ┃     W     ┃     E     ┃     R     ┃     T     ┃   ┃     Y     ┃     U     ┃     I     ┃     O     ┃     P     ┃
            //             ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫
            //             ┃     A     ┃     S     ┃     D     ┃     F     ┃     G     ┃   ┃     H     ┃     J     ┃     K     ┃     L     ┃     ;     ┃
            // ┏━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┓
            // ┃     Q     ┃     Z     ┃     X     ┃     C     ┃     V     ┃     B     ┃   ┃     N     ┃     M     ┃     ,     ┃     .     ┃     /     ┃     \     ┃
            // ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛
            //                                     ┃    DEL    ┃    TAB    ┃    SPC    ┃   ┃   ENTER   ┃    ESC    ┃   BSPC    ┃
            //                                     ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛   ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛

            bindings = <
                  &kp Q       &kp W       &kp E        &kp R         &kp T        &kp Y          &kp U        &kp I                &kp O            &p_bind
                  &mt LGUI A  &mt LALT S  &mt LCTRL D  &mt LSHIFT F  &kp G        &kp H          &mt RSHFT J  &mt RIGHT_CONTROL K  &mt RIGHT_ALT L  &mt RGUI SEMI
&change_language  &kp Z       &kp X       &kp C        &kp V         &kp B        &kp N          &kp M        &kp COMMA            &kp DOT          &kp FSLH       &mt SQT BSLH
                                          &kp TAB      &kp ENTER     &kp SPACE    &kp BACKSPACE  &kp ESC      &to 1
            >;
        };

        navigation {
            bindings = <
            &kp LALT   &kp GRAVE  &kp UP       &kp EQUAL  &kp LBKT                &kp RBKT               &kp N7   &kp N8  &kp N9  &kp EQUAL
            &kp LSHFT  &kp LEFT   &kp DOWN     &kp RIGHT  &kp LEFT_BRACE          &kp RIGHT_BRACE        &kp N4   &kp N5  &kp N6  &kp MINUS
&caps_word  &kp LCTRL  &kp PG_UP  &screenshot  &kp PG_DN  &kp LEFT_PARENTHESIS    &kp RIGHT_PARENTHESIS  &kp N1   &kp N2  &kp N3  &kp N0     &kp ASTERISK
                                  &to 0        &kp ENTER  &kp SPACE               &kp DELETE             &kp ESC  &to 2
            >;
        };

        media {
            bindings = <
       &none  &none  &none  &none  &none    &none  &none       &kp C_VOL_UP     &none           &none
       &none  &none  &none  &none  &none    &none  &kp C_PREV  &mt C_MUTE C_PP  &kp LS(C_NEXT)  &none
&none  &none  &none  &none  &none  &none    &none  &none       &kp C_VOL_DN     &none           &none  &none
                     &to 0  &none  &none    &none  &none       &to 2
            >;
        };

        service {
            bindings = <
       &none         &none         &none         &bootloader   &sys_reset    &sys_reset  &bootloader  &none  &none  &none
       &bt BT_SEL 3  &bt BT_SEL 2  &bt BT_SEL 1  &bt BT_SEL 0  &none         &none       &none        &none  &none  &none
&none  &none         &none         &none         &none         &none         &none       &none        &none  &none  &none  &bt BT_CLR
                                   &to 0         &none         &none         &none       &none        &none
            >;
        };

        // ▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄
    };
};
